        <Button x:Name="LoginB" Content="Войти" HorizontalAlignment="Left" Margin="10,56,0,0" VerticalAlignment="Top" Width="91" Click="LoginB_Click"/>
        <TextBox x:Name="LoginTB" HorizontalAlignment="Left" Margin="11,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200"/>
        <PasswordBox x:Name="PasswordPB" HorizontalAlignment="Left" Margin="11,33,0,0" VerticalAlignment="Top" Width="200"/>
        <Label Content="Логин" HorizontalAlignment="Left" Margin="216,6,0,0" VerticalAlignment="Top"/>
        <Label Content="Пароль" HorizontalAlignment="Left" Margin="216,29,0,0" VerticalAlignment="Top"/>
        <Button x:Name="LoginGuestB" Content="Войти как гость" HorizontalAlignment="Left" Margin="11,81,0,0" VerticalAlignment="Top" Click="LoginGuestB_Click"/>

    </Grid>
</Window>
