<Window x:Class="SmaginMA_2025_11_27.AppWindow.CreateAppWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmaginMA_2025_11_27.AppWindow"
        mc:Ignorable="d"
        Title="Создать новый товар" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="ArticleTB" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200"/>
        <Label Content="Артикул" HorizontalAlignment="Left" Margin="215,6,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="NameTB" HorizontalAlignment="Left" Margin="10,33,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200"/>
        <Label Content="Название" HorizontalAlignment="Left" Margin="215,29,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="10,56,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200"/>
        <Label Content="Единицы измерения" HorizontalAlignment="Left" Margin="215,52,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="CostTB" HorizontalAlignment="Left" Margin="10,79,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200"/>
        <TextBox x:Name="MaxDiscountTB" HorizontalAlignment="Left" Margin="10,102,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200"/>
        <TextBox x:Name="UnitTB" HorizontalAlignment="Left" Margin="10,56,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200"/>
        <Label Content="Цена" HorizontalAlignment="Left" Margin="215,75,0,0" VerticalAlignment="Top"/>
        <Label Content="Максимальная скидка" HorizontalAlignment="Left" Margin="215,98,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="ManufacturerCB" HorizontalAlignment="Left" Margin="10,125,0,0" VerticalAlignment="Top" Width="200"/>
        <Label Content="Производитель" HorizontalAlignment="Left" Margin="215,125,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="SupplierCB" HorizontalAlignment="Left" Margin="10,152,0,0" VerticalAlignment="Top" Width="200"/>
        <ComboBox x:Name="CategoryCB" HorizontalAlignment="Left" Margin="10,179,0,0" VerticalAlignment="Top" Width="200"/>
        <Label Content="Поставщик" HorizontalAlignment="Left" Margin="215,150,0,0" VerticalAlignment="Top"/>
        <Label Content="Категория" HorizontalAlignment="Left" Margin="215,177,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="CurrentDiscountTB" HorizontalAlignment="Left" Margin="10,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="200"/>
        <TextBox x:Name="StockQuantityTB" HorizontalAlignment="Left" Margin="10,231,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200"/>
        <TextBox x:Name="DescriptionTB" HorizontalAlignment="Left" Margin="10,254,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200"/>
        <TextBox x:Name="ImagePathTB" HorizontalAlignment="Left" Margin="10,277,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200"/>
        <Label Content="Текущая скидка" HorizontalAlignment="Left" Margin="215,0,0,0" VerticalAlignment="Center"/>
        <Label Content="Колличество" HorizontalAlignment="Left" Margin="215,227,0,0" VerticalAlignment="Top"/>
        <Label Content="Описание" HorizontalAlignment="Left" Margin="215,250,0,0" VerticalAlignment="Top"/>
        <Label Content="Пусть к картинке" HorizontalAlignment="Left" Margin="215,273,0,0" VerticalAlignment="Top"/>
        <Button x:Name="SaveB" Content="Сохранить" HorizontalAlignment="Left" Margin="10,300,0,0" VerticalAlignment="Top" Width="200" Click="SaveB_Click"/>
    </Grid>
</Window>
