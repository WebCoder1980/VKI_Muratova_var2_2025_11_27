<Window x:Class="SmaginMA_2025_11_27.AppWindow.AppOrdersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmaginMA_2025_11_27.AppWindow" xmlns:views="clr-namespace:SmaginMA_2025_11_27.View"
        mc:Ignorable="d"
        Title="Заказы пользователей" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="ItemsLB" Margin="10,86,10,10" MaxHeight="710" ScrollViewer.VerticalScrollBarVisibility="Visible">
            <ListBox.ItemTemplate>
                <DataTemplate DataType="{x:Type views:AppOrderUserControl}">
                    <ContentPresenter Content="{Binding}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
