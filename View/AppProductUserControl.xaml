<UserControl x:Class="SmaginMA_2025_11_27.View.AppProductUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SmaginMA_2025_11_27.View"
             mc:Ignorable="d" d:DesignWidth="700" Height="146">
    <Grid x:Name="GridUC" Width="700">
        <TextBlock x:Name="DiscountTB" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top">
            Скидка:
            <Run Text="{Binding CurrentDiscount}" />
            %
        </TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="450,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top">
            Цена:
            <Run Text="{Binding Cost}"></Run>
            рублей
        </TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="10,31,0,0" TextWrapping="Wrap" VerticalAlignment="Top">
            <Run Text="{Binding ProductName}"></Run>
            |
            <Run Text="{Binding Category}"></Run>
        </TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="10,52,0,0" TextWrapping="Wrap" VerticalAlignment="Top">
            Производитель:
            <Run Text="{Binding Manufacturer}"></Run>
        </TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="10,73,0,0" TextWrapping="Wrap" VerticalAlignment="Top">
            Поставщик:
            <Run Text="{Binding Supplier}"></Run>
        </TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="10,94,0,0" TextWrapping="Wrap" VerticalAlignment="Top">
            Количество на складе:
            <Run Text="{Binding StockQuantity}"></Run>
        </TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="10,122,0,0" TextWrapping="Wrap" VerticalAlignment="Top">
            Описание:
            <Run Text="{Binding Description}"></Run>
        </TextBlock>

    </Grid>
</UserControl>
