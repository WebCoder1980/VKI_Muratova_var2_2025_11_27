<UserControl x:Class="SmaginMA_2025_11_27.View.AppOrderUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SmaginMA_2025_11_27.View"
             mc:Ignorable="d" 
             d:DesignWidth="700" Height="146">
    <Grid x:Name="GridUC" Width="700">
        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top">
            Покупатель:
            <Run Text="{Binding AppUser.FullName}"></Run>
        </TextBlock>

        <TextBlock HorizontalAlignment="Left" Margin="303,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top">
            Товар:
            <Run Text="{Binding AppProduct.AppProduct.Name}"></Run>
        </TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="303,31,0,0" TextWrapping="Wrap" VerticalAlignment="Top">
            Колличество:
            <Run Text="{Binding AppOrderProduct.Quantity}"></Run>
        </TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="303,52,0,0" TextWrapping="Wrap" VerticalAlignment="Top">
            Дата-время покупки:
            <Run Text="{Binding AppOrderProduct.AppOrder.OrderDate}"></Run>
        </TextBlock>
    </Grid>
</UserControl>
